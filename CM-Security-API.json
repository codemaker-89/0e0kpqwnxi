	"item": [
		{
			"name": "1. LOGIN",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const jsonResponse = pm.response.json();\r",
							"const data = jsonResponse.responseBody;\r",
							"if(data.accessToken){\r",
							"    pm.collectionVariables.set(\"access-token\", data.accessToken);\r",
							"    pm.collectionVariables.set(\"refresh-token\", data.refreshToken);\r",
							"    console.log(data.accessToken);\r",
							"    console.log(data.refreshToken);\r",
							"}else{\r",
							"    // Stop the run.\r",
							"    postman.setNextRequest(null);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "requestId",
						"value": "{{$randomUUID}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\":\"admin\",\r\n    \"password\":\"password\",\r\n    \"tenant\":1,\r\n    \"grantType\":\"user\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base-url}}/oauth/login",
					"host": [
						"{{base-url}}"
					],
					"path": [
						"oauth",
						"login"
					]
				},
				"description": "**Login API**\n\nThis will generate Access Token and Refresh Token"
			},
			"response": []
		},
